# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is in .gitignore and should not be committed

# ============================================
# MINIMUM REQUIRED (when running from Cloud Shell)
# ============================================

# OCI Region (change to your preferred region)
region = "us-ashburn-1"

# Tenancy OCID (get it in Cloud Shell with: oci iam tenancy get --query 'data.id' --raw-output)
tenancy_ocid = "ocid1.tenancy.oc1..aaaaaaa..."

# SSH Public Key
# In Cloud Shell, generate one with: ssh-keygen -t ed25519 -N "" -f ~/.ssh/oci_key
# Then get it with: cat ~/.ssh/oci_key.pub
ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... your-key-here"

# ============================================
# OPTIONAL: Use existing VCN/Subnet
# ============================================
# If you have an existing VCN and subnet, uncomment and fill these:
# vcn_id    = "ocid1.vcn.oc1.iad.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# subnet_id = "ocid1.subnet.oc1.iad.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# If you don't provide these, Terraform will create them automatically!

# ============================================
# OPTIONAL: Custom Configuration
# ============================================
# project_name = "neurod3"  # Default is "neurod3"
# instance_ocpus = 2        # Default is 2
# instance_memory_gb = 8    # Default is 8
# tenancy_ocid = ""         # Auto-detected in Cloud Shell, only needed if not using CLI config

